---
interface Props {
    title: string;
    description: string;
    image: string;
}
const { title, description, image } = Astro.props;
---

<div
    class="bg-neutral-100 rounded-xl px-7 py-5 text-center flex flex-col justify-between"
>
    <div>
        <picture>
            <img src={image} alt={title} class="w-full rounded-xl" />
        </picture>
        <p class="mt-3 font-light">{description}</p>
    </div>
    <div>
        <h3 class="font-medium text-2xl mt-3">{title}</h3>
        <button
            class="mt-4 mb-3 py-2 px-2 rounded-xl text-xs border-2 border-black transition duration-300 ease-in-out block hover:bg-black hover:text-white w-full"
            >Necesito {title}</button
        >
    </div>
</div>
