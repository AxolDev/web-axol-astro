---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
    colspan?: string;
}
const { title, description, image, link, colspan } = Astro.props;
---

<div class={`${colspan ?? colspan} hover:scale-[1.01] transition`}>
    <div class="rounded-lg shadow-md relative overflow-hidden h-full flex">
        <div class="p-4 z-20 max-w-[70%]">
            <h2 class="text-xl font-semibold text-white">
                {title}
            </h2>
            <p class="text-neutral-300 mt-2">
                {description}
            </p>
            <a
                href={link}
                class="block text-blue-500 font-semibold hover:underline mt-5"
            >
                Leer más →
            </a>
        </div>
        <div class="absolute w-full h-full">
            <div class="relative h-full">
                <div
                    class="bg-gradient-to-r from-black to-transparent w-full min-h-[100px] absolute h-full"
                >
                </div>
                <div class="min-h-[100px] h-full">
                    <img
                        src={image}
                        alt="Imagen de la nota"
                        class="w-full object-cover h-full"
                    />
                </div>
            </div>
        </div>
    </div>
</div>
